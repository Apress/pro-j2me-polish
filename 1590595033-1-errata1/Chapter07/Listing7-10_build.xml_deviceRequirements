<!-- selecting devices with the <deviceRequirements> section -->
<!-- please refer to Listing 7-7 for a complete build.xml example -->

<j2mepolish>
	<info
		license="GPL"
		name="Roadrunner"
		vendorName="A reader."
		version="0.0.1"
		jarName="${polish.vendor}-${polish.name}-roadrunner.jar"
	/>
	<deviceRequirements>
		<requirement name="Identifier" value="Generic/midp1, Nokia/Series60" />
	</deviceRequirements>
	<build
		usePolishGui="false"
	>
		<midlet class="com.apress.roadrunner.Roadrunner" />
	</build>
	<emulator />
</j2mepolish>
